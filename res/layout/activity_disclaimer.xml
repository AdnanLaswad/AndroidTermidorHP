<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="DisclaimerActivity">

    <TextView
        android:id="@+id/txtCaution"
        style="@style/Disclaimer"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:text="@string/disclaimer_caution"
        android:textStyle="bold" />

    <TextView
		android:id="@+id/tt"
		android:layout_below="@+id/txtCaution"
        style="@style/Disclaimer"
        android:layout_width="match_parent"
        android:text="@string/disclaimer" />
	<LinearLayout
		android:layout_below="@+id/tt"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">
    <Button

        android:id="@+id/btnContinue"
        style="@style/Button"
        android:onClick="continueButton"
        android:text="@string/disclaimerContinue"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />
	</LinearLayout>
     <LinearLayout
		 android:layout_below="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

	 </LinearLayout>
	<Button

		android:id="@+id/disclaimer"

		android:layout_width="match_parent"

		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toEndOf="@+id/Actions"
		android:background="@color/message_error"
		android:gravity="center"
		android:paddingBottom="10dp"
		android:paddingTop="10dp"
		android:text="Staging Server Data"
		android:textAppearance="@style/Button"
		android:textColor="@color/container_color"
		android:textSize="18sp" />

	<TextView

		android:id="@+id/tvVersion"
		style="@style/Label"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/txtCaution"
		android:layout_gravity="center"
		android:layout_marginTop="98dp"
		android:gravity="center"
		android:paddingTop="50dp"
		android:text="@string/units"
		android:visibility="visible" />
</RelativeLayout>
